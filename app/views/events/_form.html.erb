<%= form_for [planner, event] do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    Event <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :xp %>
    <%= f.number_field :xp %>

    <ul>
      Add Treasures
      <%= f.fields_for :treasures, event.treasures.build do |treasure_builder| %>
          <li><%= treasure_builder.label :name %>
            <%= treasure_builder.text_field :name %></li>
          <li><%= treasure_builder.label :gold_value %>
            <%= treasure_builder.number_field :gold_value %> </li>
          <li><%= treasure_builder.label :kind %>
            <%=treasure_builder.text_field :kind %> </li>
      <% end %>
    </ul>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>