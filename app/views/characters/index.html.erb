<p id="notice"><%= notice %></p>

<h1>Characters</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <p> Character Name: <%= character.name %> </p>
      <p> Created by: <%= character.user.email %></p>
      <div class= "js-expand" id="<%=character.id%>" >
      </div>
      <p> <button class= "js-more" data-id="<%=character.id%>"> More info </button>
        <% if !!character.planner %>
        <p> <%= link_to "Planner", character_planner_path(character, character.planner) %> </p>
      <% else %>
      <p><%= link_to "Create Planner", character_planners_path(character), method: :post %></p>
      <% end %>
      <p><%= link_to 'Show the Character', character, class: 'show-character', :'data-id' => character.id %></p>
      <p><%= link_to 'Edit Character', edit_character_path(character) %></p>
      <p><%= link_to 'Delete Character', character, method: :delete, data: { confirm: 'Are you sure?' } %></p>
  -----------------------------------------
    <% end %>
  </tbody>
</table>

<br>

