<p id="notice"><%= notice %></p>

<h1>Characters</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
    <%= render 'character', character: character %>
        <p><%= link_to 'Show the Character', character %></p>
        <p><%= link_to 'Edit Character', edit_character_path(character) %></p>
        <p><%= link_to 'Delete Character', character, method: :delete, data: { confirm: 'Are you sure?' } %></p>
  -----------------------------------------
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Character', new_character_path %>
